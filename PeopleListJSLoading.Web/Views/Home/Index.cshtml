

<div class="container mt-5">
    <div class="row">
        <div>
            <button class="btn btn-outline-primary" id="add-person">Add Person</button> 
        </div>
        <table class="table table-striped table-hover col-md-6">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th>Edit/Delete</th>
                </tr>
            </thead>
            <tbody id="table-body">
            
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="add-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add a person</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" placeholder="First Name" name="firstName" id="firstName" class="form-control" />
                <input type="text" placeholder="Last Name" name="lastName" id="lastName" class="form-control mt-3" />
                <input type="text" placeholder="Age" name="age" id="age" class="form-control mt-3" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" id="close" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-primary" id="save">Save</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modal-title">Editing...</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" placeholder="First Name" name="firstName" id="first-name-edit" class="form-control" />
                <input type="text" placeholder="Last Name" name="lastName" id="last-name-edit" class="form-control mt-3" />
                <input type="text" placeholder="Age" name="age" id="age-edit" class="form-control mt-3" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" id="close" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-primary" id="update">Update</button>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/javascript.js"></script>
}